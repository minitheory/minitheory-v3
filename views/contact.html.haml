- extends "layouts/layout.html.haml"

- set active_nav = "contact"
- set page_title = "Contact Us"
- set meta_desc = "Contact us directly to talk about your project's requirements."

- block page_content
  .contact-banner
    .row
      .medium-12.columns
        %h2
          %span We're an international team
          based in Singapore

  .row
    .align-center.medium-10.medium-centered.columns
      .contact.page-section.half-padding
        %h1 Have a project in mind? Let's talk.

        %ul
          %li
            %img(src="/assets/img/contact-mike.png")
            %span.break Mike
          %li
            %img(src="/assets/img/contact-sylvia.png")
            %span.break Sylvia

        %a.button(href="mailto:hi@minitheory.com") Email Us

        %p.location
          Our office is located at
          %span.address.break 4B Jiak Chuan Road, Singapore 089261
        %picture
          %source(srcset="/assets/img/Building@2x.png" media="(min-resolution: 192dpi), (-webkit-min-device-pixel-ratio: 2)")
          %source(srcset="/assets/img/Building@3x.png" media="(min-resolution: 288dpi), (-webkit-min-device-pixel-ratio: 3)")
          %img(srcset="/assets/img/Building.png" alt="")
